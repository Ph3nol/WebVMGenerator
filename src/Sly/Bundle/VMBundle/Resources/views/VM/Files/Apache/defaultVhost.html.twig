<VirtualHost *:80>
    ServerName {{ vHost.hostname }}
    ServerAdmin chuck-norris@{{ vHost.hostname }}
    DocumentRoot /project{{ vHost.rootDir }}

    <Directory "/project{{ vHost.rootDir }}">
        AllowOverride all
        Order allow,deny
        Allow from all
    </Directory>

    ErrorLog  /var/log/apache2/{{ vHost.hostname }}-error_log
    CustomLog /var/log/apache2/{{ vHost.hostname }}-access_log common
</VirtualHost>
