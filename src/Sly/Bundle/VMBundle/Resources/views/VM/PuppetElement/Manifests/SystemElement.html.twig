class { "system": }

file { "/etc/motd":
    ensure  => file,
    mode    => "0644",
    owner   => "root",
    group   => "root",
    content => template("system/motd.erb"),
}

{% for package in systemPackages %}
system::package { "{{ package }}": }
{% endfor %}

system::config { "bashrc":
    name   => ".bashrc",
    source => "/vagrant/files/system/bashrc",
}
