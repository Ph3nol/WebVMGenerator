class { "system": }

file { "/etc/motd":
    ensure  => file,
    mode    => "0644",
    owner   => "root",
    group   => "root",
    content => template("system/motd.erb"),
}

system::package { [ "augeas-lenses", "augeas-tools", "libaugeas-ruby", "libaugeas0" ]: }
{% for package in vm.systemPackages %}
system::package { "{{ package }}": }
{% endfor %}

system::config { "bash_aliases":
    name   => ".bash_aliases",
    source => "/vagrant/files/system/bash_aliases",
}

system::config { "bashrc":
    name   => ".bashrc",
    source => "/vagrant/files/system/bashrc",
}
