{% if vm.php %}
class { "apache::mod::php":
    require => Package["php5"]
}
{% else %}
class { "apache": }
{% endif %}

apache::mod { "rewrite": }

apache::vhost { "{{ vm.hostname }}":
    priority      => "50",
    vhost_name    => "*",
    port          => "{{ vm.apachePort }}",
    docroot       => "/project{{ vm.apacheRootDir }}",
    serveradmin   => "chuck.norris@{{ vm.hostname }}",
    serveraliases => [ "webvm" ],
}
